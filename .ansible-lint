---
exclude_paths:
  - .cache/
  - .github/
  - ../../../.cache/ # Strange github action behaviour

skip_list:
  - "package-latest"
  - "risky-file-permissions"
  - "ignore-errors"
  - "no-changed-when"
  - "fqcn[action-core]"
  - "name[missing]"
  - "var-naming[no-role-prefix]"
  - "name[template]"
  - "yaml[line-length]"
  - "yaml[comments]"
  - "galaxy[no-changelog]"
  - "warning[outdated-tag]"
