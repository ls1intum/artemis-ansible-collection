{{ ansible_managed | comment }}

jhipster:
  security:
    authentication:
      jwt:
        base64-secret: {{ registry_bootstrap_prod_jwt }}
        secret: ''

spring:
  cloud:
    config:
      server:
        bootstrap: true
        composite:
          - type: native
            search-locations: file:./config-server

eureka:
  instance:
    prefer-ip-address: true
    ip-address: "[{{ registry_ip_address }}]"
    instanceId: {{ registry_instance_id }}
  server:
    enable-self-preservation: false
    registry-sync-retry-wait-ms: 500
    a-sgcache-expiry-timeout-ms: 60000
    eviction-interval-timer-in-ms: 30000
    peer-eureka-nodes-update-interval-ms: 30000
    renewal-threshold-update-interval-ms: 15000
