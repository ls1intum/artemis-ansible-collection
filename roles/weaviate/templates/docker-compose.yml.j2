services:
  traefik:
    image: traefik:v3.6
    container_name: traefik
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - weaviate_network
    ports:
      - "80:80"
      - "443:443"
    environment:
      - LETSENCRYPT_EMAIL=${LETSENCRYPT_EMAIL}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./traefik/traefik.yml:/traefik.yml:ro
      - ./traefik/acme.json:/acme.json:rw
      - ./traefik/config.yml:/config.yml:ro
    healthcheck:
      test: ["CMD", "traefik", "healthcheck", "--ping"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 5s
    deploy:
      resources:
        limits:
          cpus: '{{ weaviate_traefik_cpu_limit }}'
          memory: {{ weaviate_traefik_memory_limit }}
        reservations:
          cpus: '{{ weaviate_traefik_cpu_limit }}'
          memory: {{ weaviate_traefik_memory_limit }}

  weaviate:
    image: cr.weaviate.io/semitechnologies/weaviate:${WEAVIATE_VERSION:-{{ weaviate_build_version }}}
    container_name: weaviate
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - weaviate_network
    ports:
      - "50051:50051"
    command:
      - --host
      - 0.0.0.0
      - --port
      - '8080'
      - --scheme
      - http
    volumes:
      - {{ weaviate_data_directory }}:/var/lib/weaviate
      - {{ weaviate_backup_directory }}:/var/lib/weaviate/backups
    environment:
      QUERY_DEFAULTS_LIMIT: 25
      AUTHENTICATION_ANONYMOUS_ACCESS_ENABLED: 'false'
      AUTHENTICATION_APIKEY_ENABLED: 'true'
      AUTHENTICATION_APIKEY_ALLOWED_KEYS: '${WEAVIATE_API_KEY}'
      AUTHENTICATION_APIKEY_USERS: '${WEAVIATE_API_USER:-{{ weaviate_api_user }}}'
      PERSISTENCE_DATA_PATH: '/var/lib/weaviate'
      ENABLE_MODULES: 'multi2vec-clip'
      ENABLE_API_BASED_MODULES: 'true'
      CLIP_INFERENCE_API: 'http://multi2vec-clip:8080'
      CLUSTER_HOSTNAME: 'node1'
      LOG_LEVEL: '${WEAVIATE_LOG_LEVEL:-{{ weaviate_log_level }}}'
      LOG_FORMAT: 'json'
      BACKUP_FILESYSTEM_PATH: '/var/lib/weaviate/backups'
    healthcheck:
      test: ["CMD", "wget", "--spider", "-q", "http://localhost:8080/v1/.well-known/ready"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.weaviate.entrypoints=http"
      - "traefik.http.routers.weaviate.rule=Host(`${WEAVIATE_DOMAIN}`)"
      - "traefik.http.middlewares.weaviate-https-redirect.redirectscheme.scheme=https"
      - "traefik.http.routers.weaviate.middlewares=https-redirectscheme@file"
      - "traefik.http.routers.weaviate-secure.entrypoints=https"
      - "traefik.http.routers.weaviate-secure.rule=Host(`${WEAVIATE_DOMAIN}`)"
      - "traefik.http.routers.weaviate-secure.tls=true"
      - "traefik.http.routers.weaviate-secure.tls.certresolver=letsencrypt"
      - "traefik.http.routers.weaviate-secure.tls.options=default"
      - "traefik.http.routers.weaviate-secure.middlewares=default-headers@file,rate-limit@file"
      - "traefik.http.routers.weaviate-secure.service=weaviate"
      - "traefik.http.services.weaviate.loadbalancer.server.port=8080"

    deploy:
      resources:
        limits:
          cpus: '{{ weaviate_cpu_limit }}'
          memory: {{ weaviate_memory_limit }}
        reservations:
          cpus: '{{ weaviate_cpu_limit }}'
          memory: {{ weaviate_memory_limit }}
    depends_on:
      multi2vec-clip:
        condition: service_started

  multi2vec-clip:
    image: {{ weaviate_multi2vec_image }}
    container_name: multi2vec-clip
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
    networks:
      - weaviate_network
    environment:
      ENABLE_CUDA: '{{ weaviate_enable_cuda }}'
    deploy:
      resources:
        limits:
          cpus: '{{ weaviate_multi2vec_cpu_limit }}'
          memory: {{ weaviate_multi2vec_memory_limit }}
        reservations:
          cpus: '{{ weaviate_multi2vec_cpu_limit }}'
          memory: {{ weaviate_multi2vec_memory_limit }}

networks:
  weaviate_network:
    driver: bridge
